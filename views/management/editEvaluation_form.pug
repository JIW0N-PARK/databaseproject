extends ../layout 

//- 새로운 프로젝트 생성
block content
  .container 
    h1.text-center.mb-5.mt-5 평가 항목 수정하기
    form(action=`/eval/manage/${item.evaluation_item_no}?_method=PUT`, method="post")
      .form-group
          .row.align-items-center.mt-4
            .col
              h3 평가 종류
              select.form-control(name="type", size="1" disabled)
                option(value=`${item.evaluation_type}`)= item.evaluation_type
          .row.align-items-center
              .col.mt-4
                h3 항목 내용
                input.form-control(type="text", name="title", value=`${item.item_title}`)
                
          .row.align-items-center.mt-4
              .col
                h3 항목 예시
                input.form-control(type="text", name="example", value=`${item.item_example}`)
                  
          .row.justify-content-start.mt-4
              .col(style="margin-bottom: 1em")
                button.btn.btn-outline-dark(type="submit", style="float: right") 평가항목 수정하기