extends layout
//-회원,비회원 로그인 페이지
block content
  .container.signin
    br
    .loginView
            h3 Prompt Solution
            br
            form.member(action='/signin', method='POST')
              .login
                .login-head
                  p.loginMember 회원 로그인
                .row 
                  .input-group.mb-3
                    input.myinput(type='text' name="id" placeholder='아이디' required)
                .row
                  .input-group.mb-3
                    input.myinput(type='password' name='password' placeholder='비밀번호' required) 
                br
                button.loginButton(type='submit') 로그인
              br
            form.guest(action='/signin/customer', method='POST')
              br
              br

              p.loginCustomer 비회원 로그인
              .row 
                .input-group.mb-3
                  input.myinput(type='text' name='email' placeholder='고객 이메일' required)
              .row
                .input-group.mb-3
                  input.myinput(type='password' name= 'authKey' placeholder='인증키' required)
              br
              button.loginButton(type='submit') 로그인
              br
              br
              



